<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="45dp"
                />
            <solid
                android:color="@color/tailwind_grey_50"
                />
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />
        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <size android:height="50dp" android:width="50dp"/>
            <corners
                android:radius="45dp"
                />
            <solid
                android:color="@color/tailwind_grey_200"/>
            <padding
                android:bottom="0dp"
                android:left="0dp"
                android:right="0dp"
                android:top="0dp"
                />

        </shape>
    </item>
</selector>